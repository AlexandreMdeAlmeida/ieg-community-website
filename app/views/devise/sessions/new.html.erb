<div class="container">
  <h2>Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'simple_form' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.input :email, autofocus: true, required: true, label: 'Email', input_html: { autocomplete: 'email', class: 'form-control' } %>

    <%= f.input :password, label: 'Password', input_html: { autocomplete: 'current-password', class: 'form-control' } %>

    <% if devise_mapping.rememberable? %>
      <%= f.input :remember_me, as: :boolean, label: 'Remember me' %>
    <% end %>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

