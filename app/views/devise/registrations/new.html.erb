<div class="container">
  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "simple_form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.input :email, autofocus: true, required: true, label: 'Email', input_html: { autocomplete: 'email', class: 'form-control' } %>

    <% if @minimum_password_length %>
      <%= f.input :password, required: true, label: 'Password', hint: "(#{@minimum_password_length} characters minimum)", input_html: { autocomplete: 'new-password', class: 'form-control' } %>
    <% else %>
      <%= f.input :password, required: true, label: 'Password', input_html: { autocomplete: 'new-password', class: 'form-control' } %>
    <% end %>

    <%= f.input :password_confirmation, required: true, label: 'Confirm Password', input_html: { autocomplete: 'new-password', class: 'form-control' } %>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

