<div class="container">
  <h2>Resend confirmation instructions</h2>

  <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'simple_form' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.input :email, autofocus: true, required: true, label: 'Email', input_html: { autocomplete: 'email', class: 'form-control', value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) } %>

    <div class="form-actions">
      <%= f.button :submit, "Resend confirmation instructions", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

