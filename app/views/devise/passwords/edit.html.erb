<div class="container">
  <h2>Change your password</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'simple_form' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <%= f.input :password, label: "New password", required: true, autofocus: true, input_html: { autocomplete: "new-password", class: "form-control" } %>

    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>

    <%= f.input :password_confirmation, label: "Confirm new password", input_html: { autocomplete: "new-password", class: "form-control" } %>

    <div class="form-actions">
      <%= f.button :submit, "Change my password", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

