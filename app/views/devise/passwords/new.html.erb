<div class="container">
  <h2>Forgot your password?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'simple_form' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.input :email, autofocus: true, required: true, label: 'Email', input_html: { autocomplete: 'email', class: 'form-control' } %>

    <div class="form-actions">
      <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

